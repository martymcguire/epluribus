    <div class="navbar navbar-inverse navbar-fixed-top" role="navigation">
      <div class="container">
        <show-hide>
          <div class="navbar-header">
            <button type="button" class="navbar-toggle" trigger>
              <span class="sr-only">Toggle navigation</span>
              <span class="icon-bar"></span>
              <span class="icon-bar"></span>
              <span class="icon-bar"></span>
            </button>
            <%= link_to(
                  image_tag(
                    "wethebuilders-white.png",
                  ),
                  root_path,
                  class: "navbar-brand",
                  rel: "home",
                  title: "We the Builders Home"
                )
            %>
          </div>
          <div class="navbar-collapse collapse" content>
            <% if user_signed_in? %>
              <div class="navbar-right">
                <%= link_to path_to_builder(current_user) do %>
                  <% if ! current_user.avatar.nil? %>
                    <%= image_tag(current_user.avatar, class: 'navatar', alt:'')%>
                    <span><%= current_user.name %></span>
                  <% end %>
                <% end %>
                <%= link_to "<i class='fa fa-gear'></i> Account".html_safe, path_to_edit_builder(current_user) %>
                <%= link_to "Sign Out", destroy_user_session_path %>
               </div>
            <% else %>
              <%= button_to(image_tag('google-signin.png'), user_google_oauth2_omniauth_authorize_path, :method => :post, :class=>"navbar-right") %>
            <% end %>
          </div>
        </show-hide>
      </div>
    </div>
